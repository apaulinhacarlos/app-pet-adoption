{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,   
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "tests/integration/animals.test.ts_"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
