{
  "openapi": "3.0.0",
  "info": {
    "title": "pet-adoption-backend",
    "version": "1.0.0"
  },
  "paths": {
    "/api/animals": {
      "get": {
        "tags": [
          "Animals"
        ],
        "summary": "Returns all animals",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalsArray"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Animals"
        ],
        "summary": "Create a new animal",
        "requestBody": {
          "description": "Animal object that needs to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AnimalObject"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalObject"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          }
        }
      }
    },
    "/api/animals/{id}": {
      "get": {
        "tags": [
          "Animals"
        ],
        "summary": "Returns the animal by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Numeric ID of the animal to get"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalObject"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Animals"
        ],
        "summary": "Updates the animal by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Numeric ID of the animal to update"
          }
        ],
        "requestBody": {
          "description": "Animal object that needs to be updated",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AnimalObject"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalObject"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Animals"
        ],
        "summary": "Deletes the animal by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Numeric ID of the animal to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Animal deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnimalNotFound"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [],
  "components": {
    "schemas": {
      "AnimalObject": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Leo"
          },
          "specie": {
            "type": "string",
            "example": "dog"
          },
          "gender": {
            "type": "string",
            "enum": [
              "male",
              "female"
            ]
          },
          "yearOfBirth": {
            "type": "number",
            "example": 2019
          },
          "description": {
            "type": "string",
            "example": "Leo is a very friendly dog"
          },
          "imageUrl": {
            "type": "string",
            "example": "https://www.google.com"
          },
          "videoUrl": {
            "type": "string",
            "example": "https://www.google.com"
          },
          "availableForAdoption": {
            "type": "boolean",
            "example": true
          },
          "isAdopted": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "AnimalsArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/AnimalObject"
        }
      },
      "AnimalNotFound": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "no animals found"
          }
        }
      }
    }
  }
}