{
  "name": "pet-adoption-backend",
  "version": "1.0.0",
  "description": "backend do app de adocao pet",
  "main": "./build/server",
  "author": "https://github.com/apaulinhacarlos",
  "license": "ISC",
  "scripts": {
    "test": "mocha -r ts-node/register 'tests/**/*.ts' ",
    "test:coverage": "nyc npm test",
    "test:total": "npm test && npm run test:coverage",
    "build": "tsc",
    "db:reset": "npx tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "predev": "npm run build && npm run db:reset",
    "dev": "tsnd --watch \"./src/**\" --transpile-only ./src/server.ts",
    "prestart": "npm run build && npm run db:reset",
    "start": "node ./build/server.js",
    "lint": "eslint ./src --ext .ts"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "mysql2": "3.10.1",
    "sequelize": "6.37.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/chai": "4.3.0",
    "@types/chai-http": "4.2.0",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.5",
    "@types/mocha": "10.0.7",
    "@types/node": "20.14.5",
    "@types/sequelize": "4.28.20",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.12",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "eslint": "8.55.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-editorconfig": "4.0.3",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-sonarjs": "0.23.0",
    "mocha": "9.2.2",
    "nodemon": "3.1.3",
    "nyc": "17.0.0",
    "sequelize-cli": "6.6.2",
    "sinon": "13.0.1",
    "sinon-chai": "3.7.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
}
