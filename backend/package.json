{
  "name": "pet-adoption-backend",
  "version": "1.0.0",
  "description": "backend do app de adocao pet",
  "main": "./build/server",
  "scripts": {
    "test": "mocha --require ts-node/register --extensions ts --watch --watch-files src 'src/tests/**/*.ts'",
    "predev": "npm run db:reset",
    "dev": "tsnd --watch \"./src/**\" --transpile-only ./src/server.ts",
    "start": "ts-node ./src/server.ts",
    "lint": "eslint ./src --ext .ts",
    "db:reset": "npx tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "author": "apaulinhacarlos",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "mysql2": "3.10.1",
    "sequelize": "6.37.3",
    "sinon-chai": "^3.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/chai-http": "4.2.0",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/mocha": "10.0.6",
    "@types/node": "20.14.5",
    "@types/sequelize": "4.28.20",
    "@types/sinon": "17.0.2",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "chai": "4",
    "chai-http": "4.4.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-sonarjs": "0.23.0",
    "mocha": "10.2.0",
    "nodemon": "3.1.3",
    "sequelize-cli": "6.6.2",
    "sinon": "17.0.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  }
}
